        }

    /* Video Card */
    .video-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

        .video-card:hover {
            transform: scale(1.05);
        }

    /* Video Info */
    .video-info {
        padding: 10px;
    }

    .video-title {
        font-size: 16px;
        font-weight: bold;
