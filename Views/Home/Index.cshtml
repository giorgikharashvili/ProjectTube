    }

    .video-description {
        font-size: 14px;
        color: gray;
    }

    .video-date {
        font-size: 14px;
        color: gray;
    }

    /* Thumbnail Styles */
    .video-thumbnail {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 15px;
        margin-bottom: 15px;
    }

    /* Buttons */
    .delete-btn {
        margin-top: 10px;
    }

    .btn-danger {
        padding: 10px 15px;
        background-color: #dc3545;
        color: white;
        border-radius: 5px;
        border: none;
        font-size: 14px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Button hover effects */
